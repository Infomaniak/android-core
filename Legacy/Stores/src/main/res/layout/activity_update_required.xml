<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".updaterequired.UpdateRequiredActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/marginStandard"
        android:layout_marginBottom="@dimen/marginStandardMedium"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/updateRequiredIllu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginStandardMedium"
            android:importantForAccessibility="no"
            android:src="?attr/illustration"
            tools:src="@drawable/illu_update_required_example" />

        <TextView
            android:id="@+id/updateRequiredTitle"
            style="?attr/titleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/marginStandardMedium"
            android:gravity="center"
            android:text="@string/updateAppTitle" />

        <TextView
            android:id="@+id/updateRequiredDescription"
            style="?attr/descriptionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginStandardMedium"
            android:gravity="center"
            android:text="@string/updateRequiredDescription" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/updateAppButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginStandard"
        android:layout_marginTop="@dimen/marginStandardMedium"
        android:layout_marginBottom="40dp"
        android:text="@string/buttonUpdate" />
</LinearLayout>
